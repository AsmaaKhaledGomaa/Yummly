<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin200dp"
    android:layout_marginTop="@dimen/margin4dp"
    android:layout_marginBottom="@dimen/margin4dp">

    <View
        android:id="@+id/View1"
        android:layout_width="@dimen/margin200dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/mediumGray"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/margin12dp"
        android:background="@color/mediumGray"
        app:layout_constraintStart_toEndOf="@id/View1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view4"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/margin12dp"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@id/view5"
        app:layout_constraintStart_toStartOf="@id/view5"
        app:layout_constraintTop_toBottomOf="@id/view3"
         />

    <View
        android:id="@+id/view5"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@id/view4" />

    <View
        android:id="@+id/view6"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/mediumGray"
        app:layout_constraintStart_toStartOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="@id/view7"
        app:layout_constraintTop_toTopOf="@id/view4" />
    <View
        android:id="@+id/view7"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/mediumGray"
        app:layout_constraintStart_toEndOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@id/view5"
        android:layout_marginStart="@dimen/margin15dp" />
    <View
        android:id="@+id/view8"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/mediumGray"
        app:layout_constraintTop_toTopOf="@id/view6"
        app:layout_constraintStart_toStartOf="@id/view9"
        app:layout_constraintEnd_toEndOf="@id/view9"
        />
    <View
        android:id="@+id/view9"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/margin15dp"
        android:background="@color/mediumGray"
        app:layout_constraintStart_toEndOf="@id/view7"
        app:layout_constraintTop_toBottomOf="@id/view8"
        app:layout_constraintTop_toTopOf="@id/view7"
        />

</androidx.constraintlayout.widget.ConstraintLayout>